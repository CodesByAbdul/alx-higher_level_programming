#!/bin/bash

# Check if the $PYFILE variable is set
if [ -z "$PYFILE" ]; then
    echo "Error: \$PYFILE environment variable not set."
    exit 1
fi

# Check if the specified Python script exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: Python script '$PYFILE' not found."
    exit 1
fi

# Run the Python script
python3 "$PYFILE"  # Use python for Python 2 (if needed)
